    bool 'Enable multi-core CAN interface                 ' CONFIG_CAN_ENABLE
    if [ "$CONFIG_CAN_ENABLE" = "y" ]; then
      int 'Number of CAN cores                      ' CONFIG_CAN_NUM 1
      hex 'CAN I/O area start address (haddr[19:8]) ' CONFIG_CANIO C00
